<mvc:View controllerName="br.com.idxtecProdutos.controller.Produtos"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableProduto"
						rows="{path: '/Produtos',
							parameters: {
								expand: 'UnidadeMedidaDetails'
							}
						}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Produtos"/>
							</Toolbar> 
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="UnidadeMedidaDetails/Sigla" sortProperty="UnidadeMedidaDetails/Sigla">
								<Label text="Unidade de medida" />
								<t:template>
									<Text text="{UnidadeMedidaDetails/Sigla}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button id="refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>